<h3 class='topic'>List of users</h3>
<ul class='user-list'>
  <% @users.each do |user| %>
    <li class='each-user'>
    <% if @user.photo_link.present? %>
    <img src="<%= @user.photo_link %>" alt="User Photo">
  <% else %>
    <p>No photo available</p>
  <% end %>
    <a href="/users/<%= user.id %>">
      <h3 id='user-name'><%= user.name %></h3>
    </a>

    <p class='posta'>Number of posts:  <%= user.posts_counter %></p>
    </li>

  <% end %>
</ul>
